import { ApiProperty } from "@nestjs/swagger";
import { BaseEntity } from "./base/base.entity";
import { Prop, Schema, SchemaFactory } from "@nestjs/mongoose";
import mongoose from "mongoose";
import { MongooseCollection } from './base/mongoose.collection';

@Schema({ collection: MongooseCollection.Authority })
export class Authority extends BaseEntity {
  @ApiProperty({ example: "ROLE_USER", description: "User role" })
  @Prop({ unique: true })
  name: string;
}

export const AuthoritySchema = SchemaFactory.createForClass(Authority);
AuthoritySchema.set("timestamps", { createdAt: "_createdAt", updatedAt: "_updatedAt" });
