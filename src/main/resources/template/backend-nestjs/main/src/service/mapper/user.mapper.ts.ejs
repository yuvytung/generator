import { User<%-entitySuffix%> } from '../../domain/user.entity';
import { User<%-dtoSuffix %> } from '../dto/user.dto';

/**
 * An User mapper object.
 */
export class UserMapper {
    static fromDTOtoEntity(userDTO: User<%-dtoSuffix %>): User {
        if (!userDTO) {
            return;
        }
        const user = new User();
        const fields = Object.getOwnPropertyNames(userDTO);
        fields.forEach(field => {
            user[field] = userDTO[field];
        });
        return user;
    }

    static fromEntityToDTO(user: User): User<%-dtoSuffix %> {
        if (!user) {
            return;
        }
        const userDTO = new User<%-dtoSuffix %>();

        const fields = Object.getOwnPropertyNames(user);

        fields.forEach(field => {
            userDTO[field] = user[field];
        });

        return userDTO;
    }
}
