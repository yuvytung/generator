// eslint-disable-next-line max-classes-per-file
import { Module } from "@nestjs/common";
import { AuthModule } from "./module/AuthModule";
import { databaseConfig } from "./internal/config/DatabaseConfig";
import { config } from "./internal/config/Config";
import { ServeStaticModule } from "@nestjs/serve-static";
import { MongooseModule } from "@nestjs/mongoose";
import { InjectRedis, RedisModule } from "@liaoliaots/nestjs-redis";
import { CacheService } from "./index";
import { PrometheusModule } from "@willsoto/nestjs-prometheus";

import { PostModule } from "./module/PostModule";
import { ContentTagModule } from "./module/ContentTagModule";

class GlobalInit {
  constructor(@InjectRedis() private readonly cache: CacheService) {
    this.cache.quick = async (key, callback) => {
      let result = await this.cache.get(key.toString()).then((r) => JSON.parse(r));
      if (!result) {
        result = await callback();
        void this.cache.set(key, JSON.stringify(result));
      }
      return result;
    };
  }
}

@Module({
  imports: [
    AuthModule,
    MongooseModule.forRootAsync({ useFactory: databaseConfig }),
    ServeStaticModule.forRoot({
      rootPath: config.getClientPath(),
    }),
    RedisModule.forRootAsync({
      useFactory: () => ({
        config: [
          {
            host: getEnv("redis.host", "localhost"),
            port: getEnv("redis.port", "6379"),
          },
        ],
      }),
    }),
    PrometheusModule.register({
      path: "/management/prometheus",
    }),

    ContentTagModule,
    PostModule,
    // UserMetadataModule,
  ],
  controllers: [],
  providers: [GlobalInit],
})
export class AppModule {}
